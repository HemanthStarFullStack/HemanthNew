<link rel="stylesheet" href="/css/userSignUp.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Rancho&effect=neon">
<div class="sign-Up-Container">
    <div class="sign-up-image" id="sign-up-image">
        <img src="/images/signUp.jpg" alt="">
    </div>
    <div class="form-class-signup">
        <div class="sign-up-heading font-effect-neon">
            Sign up
        </div>
     
        <div class="form-con">
            <form action="/users/create" method="POST">
                    <input type="text" name="name" id="" placeholder="Enter your Name" required>
                    <input type="email" name="email" id="" placeholder="Enter your email" required>
                    <input type="password" name="password" id="" placeholder="Enter your password" required>
                    <input type="password" name="confirm_password" id="" placeholder="Confirm your password" required>
                    <div class="bottom-form-class">
                        <div class="google-logo">   
                            <a href="/users/auth/google" id="google-logo"><i class="fa-brands fa-google"></i></a>
                        </div>
                         <div class="sub-button">
                            <button>submit</button>
                         </div>
                    </div>
            </form>
        </div>
    </div>
</div>
